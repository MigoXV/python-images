# syntax=docker/dockerfile:1.7
# Base: Python 3.10.18 on Debian 13 (trixie) variant
# 如果你的 python:3.10.18 不是 trixie 变体，请改成对应的 trixie 基础镜像
FROM python:3.10.18

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

COPY debian.sources /etc/apt/sources.list.d/debian.sources
COPY .bashrc /root/.bashrc

# 安装基础工具 + pipx（尽量保持精简）
RUN set -eux; \
    apt-get update; \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        git \
        build-essential \
        pipx; \
    pipx ensurepath

ENV PATH="/root/.local/bin:$PATH"

RUN set -eux; \
    apt install -y --no-install-recommends vim; \
    pipx install poetry --index-url https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple; \
    poetry --version \
    pipx ensurepath

# 可选：让 Poetry 在项目目录创建虚拟环境（按需开启）
# RUN poetry config virtualenvs.in-project true

WORKDIR /workspace

# 验证工具是否可用（构建日志里能看到版本）
RUN python --version && pipx --version && poetry --version

